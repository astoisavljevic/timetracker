<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>


	<definition name="home" extends="main">
		<put-attribute name="header" type="template" value="/WEB-INF/views/home/homeHeader.jsp" />
		<put-attribute name="content" type="template" value="/WEB-INF/views/home/homeContent.jsp" />
		
		<put-list-attribute name="styles">
			<add-attribute type="string" value="/css/bootstrap.min.css" />
			<add-attribute type="string" value="/css/timetracker.css" />
		</put-list-attribute>
		
		<put-list-attribute name="scripts">
		    <add-attribute type="string" value="/js/bootstrap.min.js" />
			<add-attribute type="string" value="/js/jquery-1.9.1.min.js" />
		</put-list-attribute>
	    		
	</definition>

</tiles-definitions>